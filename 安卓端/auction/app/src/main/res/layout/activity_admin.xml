<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".AdminActivity">


    <LinearLayout
        android:id="@+id/wd_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp">

        <RelativeLayout
            android:id="@+id/admin_1"
            android:layout_width="212dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_auction"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/imageView1"
                android:text="拍卖中"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="TextView"
                android:layout_below="@+id/textView"
                android:textColor="@color/colorBlack" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/admin_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="Click"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_for_auction"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="待拍卖"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/textView3"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wd_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/wd_1"
        android:layout_marginTop="25dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:onClick="Click">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_create"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="创建拍品"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_marginLeft="70dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wd_3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/wd_2"
        android:layout_marginTop="25dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:onClick="Click">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_set"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@id/imageView4"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户管理" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wd_4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/wd_3"
        android:layout_marginTop="25dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:onClick="Click">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_finance"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@id/imageView5"
            android:gravity="center"
            android:text="财务管理" />
    </RelativeLayout>
    <Button
        android:id="@+id/quit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#438CD0"
        android:onClick="onClick"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="30dp"
        />
</RelativeLayout>