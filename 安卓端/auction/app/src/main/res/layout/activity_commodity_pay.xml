<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/R_BZJ"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="需要先支付保证金！！！"
            android:textSize="20dp"></TextView>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/R_BZJ_1"
                android:layout_width="80dp"
                android:layout_height="33dp"


                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:gravity="center"
                    android:text="RMB"
                    android:textSize="30dp"></TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R_BZJ_2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/R_BZJ_1"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="保证金"
                    android:textColor="@color/colorAccent"
                    android:textSize="22dp"></TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R_BZJ_3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/R_BZJ_1"

                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/BZJ_price"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="666"
                    android:textColor="@color/colorAccent"
                    android:textSize="40dp"></TextView>

            </RelativeLayout>


        </RelativeLayout>
        <Button
            android:id="@+id/BZJ_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即支付"
            android:onClick="onClick"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/R_Act"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入参拍金额！！！"
            android:textSize="20dp"></TextView>

        <RelativeLayout
            android:id="@+id/input_Act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_0"
            android:layout_marginTop="30dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tV8"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="参拍金额"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/et_Act_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tV9"
                android:layout_toRightOf="@+id/tV8"
                android:background="@null"
                android:hint="请输入"
                android:inputType="number|numberDecimal"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tV9"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="元"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>



        <Button
            android:id="@+id/Act_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即参拍"
            android:onClick="onClick"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>