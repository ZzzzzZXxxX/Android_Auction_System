<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ProFile_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        android:background="@color/colorWhite"
        android:textColorHint="@android:color/darker_gray"></EditText>
    <EditText
        android:id="@+id/ProFile_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        android:layout_below="@id/ProFile_et1"
        android:background="@color/colorWhite"
        android:textColorHint="@android:color/darker_gray"></EditText>
    <EditText
        android:id="@+id/ProFile_et3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        android:layout_below="@id/ProFile_et2"
        android:background="@color/colorWhite"
        android:textColorHint="@android:color/darker_gray"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProFile_et3"
        android:text="修改信息，后点击修改按钮即可！！！"
        android:layout_marginTop="5dp"></TextView>

    <Button
        android:id="@+id/ProFile_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改"
        android:onClick="onClick"
        android:layout_centerInParent="true"/>
</RelativeLayout>