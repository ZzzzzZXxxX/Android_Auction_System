<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color1">

            <RelativeLayout
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/color1">

                <com.loopj.android.image.SmartImageView
                    android:id="@+id/AuctionDetailsImageView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/R_title"
                    android:text="xxxx"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"></TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R_RMB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/R_label"

                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/R_RMB_1"
                    android:layout_width="80dp"
                    android:layout_height="33dp"


                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="33dp"
                        android:text="RMB"
                        android:gravity="center"
                        android:textSize="30dp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/R_RMB_2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/R_RMB_1"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/AD_t1"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="当前价"
                        android:textColor="@color/colorAccent"
                        android:textSize="22dp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/R_RMB_3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@+id/R_RMB_1"

                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/R_price"
                        android:gravity="center"
                        android:text="666"
                        android:textColor="@color/colorAccent"
                        android:textSize="40dp"></TextView>

                </RelativeLayout>
                <TextView
                    android:id="@+id/AD_t"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="倒计时:"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="4dp"
                    ></TextView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/R_RMB"
                android:layout_marginTop="15dp"
                android:onClick="Click"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/R_t_1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="拍卖记录"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/R_t_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@id/R_t_2"
                    android:layout_toRightOf="@+id/R_t_1"
                    android:text="x条"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/R_t_2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text=">"
                    android:textSize="16dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R_record_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/R_record"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/R_t_1_1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/R_t_3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@id/R_t_2_2"
                    android:layout_toRightOf="@+id/R_t_1_1"
                    android:text=""
                    android:textColorHint="@color/colorBlack"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/R_t_2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textSize="14dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R_record_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/R_record_1"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/R_t_1_1_1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/R_t_3_3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@id/R_t_2_2_2"
                    android:layout_toRightOf="@+id/R_t_1_1_1"
                    android:text=""
                    android:textColorHint="@color/colorBlack"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/R_t_2_2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textSize="14dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R_record_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/R_record_2"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/R_t_1_1_1_1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/R_t_3_3_3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@id/R_t_2_2_2_2"
                    android:layout_toRightOf="@+id/R_t_1_1_1_1"
                    android:text=""
                    android:textColorHint="@color/colorBlack"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/R_t_2_2_2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textSize="14dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/R_record_3"
                android:layout_marginTop="15dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="拍品展示"
                    android:textColor="@color/colorBlack">

                </TextView>


            </RelativeLayout>

            <WebView
                android:id="@+id/Web_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/R_display"></WebView>


        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/R_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即参拍\n(保证金 ￥666)"
        android:onClick="onClick"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>